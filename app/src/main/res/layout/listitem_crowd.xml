<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/crowdPictureImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="crowdPicture"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_margin="5dp"
        android:layout_rowSpan="2"
        android:layout_gravity="center_vertical"
        android:layout_columnSpan="1" />

    <GridLayout android:layout_gravity="center_vertical|bottom"
        android:layout_height="64dp">
        <TextView
            android:id="@+id/crowdNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:layout_rowSpan="1"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:layout_columnWeight="4"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="members"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textAlignment="gravity"
            android:layout_rowSpan="1"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/numMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="books"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:layout_column="4"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:id="@+id/numBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:layout_column="3"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical" />
    </GridLayout>

</GridLayout>