<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crowdshelf.app.ui.fragments.ScannerScreenFragment">

    <!-- TODO: Update blank fragment layout -->

    <fragment
    android:layout_width="382dp"
    android:layout_height="512dp"
    android:name="com.crowdshelf.app.ui.fragments.ScannerFragment"
    android:id="@+id/fragment"
    android:layout_gravity="center" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:onClick="fakeScan"
        android:text="Lean"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:onClick="fakeScan2"
        android:text="Bro"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"
        android:text="SCAN BOOK BARCODE"
        android:textColor="#FBFBFB"
        android:textSize="28dp"
        android:textStyle="bold"
        android:visibility="visible" />

</FrameLayout>
